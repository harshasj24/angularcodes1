<style>
  .myForm{ margin-top: 25px; box-shadow: 2px 2px 2px 2px lightgray; padding:
  25px; height: 350px; width: 400px !important;outline: rgb(245, 160, 160) solid
  0.1px; }
</style>

<div class="container">
  <form action="/user/edit-item" class="w-50 mx-auto myForm" method="post">
    <div class="form-group">

      <input
        type="hidden"
        class="form-control"
        id="_id"
        name="_id"
        aria-describedby="emailHelp"
        placeholder="item name"
        value="{{item._id}}"
      />

    </div>
    <div class="form-group">

      <input
        autofocus
        type="text"
        class="form-control"
        id="iName"
        name="iName"
        aria-describedby="emailHelp"
        placeholder="item name"
        value="{{item.iName}}"
      />

    </div>
    <div class="form-group">

      <input
        type="text"
        placeholder="description"
        class="form-control"
        id="iDesc"
        name="iDesc"
        value="{{item.iDesc}}"
      />
    </div>
    <div class="form-group">

      <input
        placeholder="Price"
        type="text"
        class="form-control"
        id="iPrice"
        name="iPrice"
        value="{{item.iPrice}}"
      />
    </div>

    <button type="submit" class="btn btn-primary">Update </button>

  </form>
</div>